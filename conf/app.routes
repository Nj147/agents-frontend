# microservice specific routes

->         /govuk-frontend          govuk.Routes
->         /hmrc-frontend           hmrcfrontend.Routes

GET        /assets/*file            controllers.Assets.versioned(path = "/public", file: Asset)

GET         /start-page             uk.gov.hmrc.agentsfrontend.controllers.StartController.start()

GET         /agent-login            uk.gov.hmrc.agentsfrontend.controllers.AgentLoginController.agentLogin()
+nocsrf
POST        /agent-login            uk.gov.hmrc.agentsfrontend.controllers.AgentLoginController.agentLoginSubmit()

+nocsrf
POST       /clientCode              uk.gov.hmrc.agentsfrontend.controllers.InputClientCodeController.submitClientCode()
GET        /clientCode              uk.gov.hmrc.agentsfrontend.controllers.InputClientCodeController.getInputClientCode()

GET        /successClientCode       uk.gov.hmrc.agentsfrontend.controllers.SuccessClientCodeController.successClientCode()
+nocsrf
GET        /removeClients/:crn      uk.gov.hmrc.agentsfrontend.controllers.RemoveClientController.removeClients(crn)

+nocsrf
POST       /removeConfirmed/:crn    uk.gov.hmrc.agentsfrontend.controllers.RemoveClientController.processRemoval(crn)

GET        /dashboard               uk.gov.hmrc.agentsfrontend.controllers.DashBoardController.index()

GET        /logout                  uk.gov.hmrc.agentsfrontend.controllers.AgentLoginController.logout()

GET        /updatePage              uk.gov.hmrc.agentsfrontend.controllers.AgentDetailsController.getUpdatePage()

GET         /update-contact         uk.gov.hmrc.agentsfrontend.controllers.UpdateContactNumberController.startPage
+nocsrf
POST        /update-contact         uk.gov.hmrc.agentsfrontend.controllers.UpdateContactNumberController.processContactNumber

GET         /update-address         uk.gov.hmrc.agentsfrontend.controllers.UpdateContactNumberController.startPage
+nocsrf
POST        /update-address         uk.gov.hmrc.agentsfrontend.controllers.UpdateAddressController.processAddress